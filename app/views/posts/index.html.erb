<div class="panel-primary">
  <div class="panel-heading">
<h2>Post a Blocker!</h2>
</div>
<div class="panel-body panel panel-default paddng">



<%= form_for [current_user, Post.new] do |f| %>

    <div>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </div>

    <div>
        <%= f.label :description %><br>
        <%= f.text_field :description %>
    </div>

    <div>
    <%= f.label :location %><br>
    <%= f.select(:location, ["Santa Monica", "Brentwood", "West LA", "Venice", "Pacific Palisades"])  %>
